# --- Telegram Bot ---
BOT_TOKEN=123456:telegram-bot-token
ADMIN_IDS=111111111,222222222

# --- Postgres ---
DB_HOST=postgres
DB_PORT=5432
DB_NAME=autosub
DB_USER=autosub
DB_PASSWORD=autosub_password

# --- Redis ---
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# --- Webhook / public base URL ---
PUBLIC_BASE_URL=https://example.com
WEBHOOK_SECRET=replace_me

# --- Payments: Platega ---
PLATEGA_API_ID=your_api_id
PLATEGA_API_KEY=your_api_key
PLATEGA_PROJECT_ID=16699
PLATEGA_PROJECT_NAME=AutoSub
PLATEGA_WEBHOOK_URL=https://example.com/webhook/payment
PLATEGA_SUCCESS_URL=https://example.com/payment/success
PLATEGA_FAIL_URL=https://example.com/payment/fail

# --- ASR / TTS / Media ---
WHISPER_MODEL=base
WHISPER_DEVICE=auto
FFMPEG_PATH=/usr/bin/ffmpeg

# --- Storage ---
STORAGE_PATH=/app/storage
MAX_FILE_SIZE_MB=500
CLEANUP_HOURS=24
FREE_TTL_HOURS=24
PRO_TTL_HOURS=168
CREATOR_TTL_HOURS=168

# --- Processing ---
MAX_WORKERS=3
MAX_VIDEO_DURATION_FREE=60
MAX_VIDEO_DURATION_PRO=600
MAX_VIDEO_DURATION_CREATOR=1800

# --- Misc ---
LOG_LEVEL=INFO
